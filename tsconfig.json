{
	"compilerOptions": {
		"module": "CommonJS",
		"moduleResolution": "node",
		"target": "ES2019",
		"declaration": true,
		"incremental": true,
		"noUncheckedIndexedAccess": true,
		"sourceMap": true,
		"outDir": "dist",
		"rootDir": "src",
		"strict": true,
		// Temporary fix for incorrect definition files in the sandstone module
		"skipLibCheck": true,
		"resolveJsonModule": true
	},
	"include": [
		"src/**/*"
	]
}